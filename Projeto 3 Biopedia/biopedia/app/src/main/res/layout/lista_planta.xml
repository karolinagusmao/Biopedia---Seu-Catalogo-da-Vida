<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtViewDominio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Domínio"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txtViewClasseF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Classe"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txtViewFiloF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filo"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txtViewOrdemF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ordem"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txtViewDivisao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Divisão"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txtViewFamiliaF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Família"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txtViewGeneroF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gênero"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txtViewEspecieF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Espécie"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txtViewGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grupo"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txtViewNomeComumF"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:text="Nome Comum"
        android:layout_height="50dp"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/txtViewNomeCientF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome Científico"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txtViewNomeIngF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome Inglês "
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txtViewNutricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nutrição"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txtViewClassificacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Classificação"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txtViewReproducaoF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reproducao"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txtViewOrgCel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Organização Celular"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txtViewTipoCel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo Célula"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txtViewCaractF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Caracteristicas"
        android:visibility="gone"/>

</LinearLayout>