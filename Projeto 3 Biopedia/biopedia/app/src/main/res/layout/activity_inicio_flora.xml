<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/preserve"
    tools:context=".Activity.InicioFlora">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="118dp"
            android:layout_height="380dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:gravity="center_horizontal"
            android:text="   Flora é o conjunto de espécies vegetais (flora, árvores, etc.) de uma determinada região ou ecossistema específico. É um termo muito utilizado em botânica.
            A flora numa determinada região pode ser muito rica, ou seja, com muita variedade de espécies."
            android:textAppearance="@android:style/TextAppearance.Holo" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnVerPlanta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:backgroundTint="#27d300"
        android:text="Ver Plantas"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAddPlanta"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#27d300"
        android:text="Adicionar Plantas"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:textStyle="bold" />

</LinearLayout>