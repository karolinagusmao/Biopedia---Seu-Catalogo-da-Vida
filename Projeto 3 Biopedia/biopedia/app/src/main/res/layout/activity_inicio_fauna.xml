<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/animal2"
    android:orientation="vertical"
    tools:context=".Activity.InicioFauna">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="118dp"
            android:layout_height="380dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:gravity="center_horizontal"
            android:text="   FAUNA: conjunto dos fauna de uma região ou de um país onde englobam-se os fauna selvagens e os fauna domésticos.
    Os fauna criam-se e reproduzem-se em liberdade, segundo as condições do seu habitat, ou seja, as condições do meio."
            android:textAppearance="@android:style/TextAppearance.Holo" />
    </RelativeLayout>
    <Button
        android:id="@+id/btnVerAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#27d300"
        android:text="Ver Animais"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAddAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#27d300"
        android:text="Adicionar Animais"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:textStyle="bold" />

</LinearLayout>